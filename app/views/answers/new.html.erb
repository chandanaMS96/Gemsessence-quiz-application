<form action="/answers" method="post" accept-charset="UTF-8">
	<div>
    <label for="body">Enter Answer</label>
    <input id="body" name="body" type="text" />
</div>
<div>
    <label for="is_correct">Select Status</label>
    <select name="is_correct" id="is_correct">
        <option value="true">Correct</option>
        <option value="false">Incorrect</option>
    </select>
</div>
<div>
        <label for="question_id">Select Question </label>
            <% unless @questions.blank? %>
            <select name="question_id" id="question_id">
            <% @questions.each do |question| %>
            <option value="<%= question.id%>">
                <%= question.body%>
            </option>
            <% end %>
            <% else %>
              <span id= "create_question">CREATE Question  FIRST</span>
            <% end %>
        </select>
    </div>

    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <div> <input name="commit" type="submit" value="Create Answer" data-disable-with="Enroll" /></div>
   
</form>
<style>
div{
  margin:  10px;
}
</style>