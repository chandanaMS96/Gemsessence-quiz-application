<form action="/answers" method="post" accept-charset="UTF-8">
	<div>
    <label for="body">Enter Answer</label>
    <input id="title" name="title" type="text" />
</div>
<div>
    <label for="status">Select Status</label>
    <select name="status" id="status">
        <option value="live">live</option>
        <option value="completed">completed</option>
        <option value="unpublished">unpublished</option>
    </select>
</div>
<div>
        <label for="question_id">Select Question </label>
            <% unless @questions.blank? %>
            <select name="quiz_id" id="quiz_id">
            <% @questions.each do |question| %>
            <option value="<%= question.id%>">
                <%= question.body%>
            </option>
            <% end %>
            <% else %>
              <span id= "create_question">CREATE Question  FIRST</span>
            <% end %>
        </select>
    </div>

    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <div> <input name="commit" type="submit" value="Create Quiz" data-disable-with="Enroll" /></div>
   
</form>
<style>
div{
  margin:  10px;
}
</style>